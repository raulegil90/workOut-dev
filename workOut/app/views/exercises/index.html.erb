<h1>Listing exercises for <%= @plan.title %> Plan</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Sets</th>
    <th>Reps or min</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @exercises.each do |exercise| %>
  <tr>
    <td><%= exercise.name %></td>
    <td><%= exercise.sets %></td>
    <td><%= exercise.reps_or_min %></td>
    <td><%= link_to 'Show', exercise %></td>
    <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
    <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Logout', :logout %><br />
<%= link_to 'Back to Plans', user_plans_path(@plan.user_id) %>
<%= link_to 'Add new Exercise', new_plan_exercise_path(@plan.id) %>
